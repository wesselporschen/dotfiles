
# macOS application shortcuts
#cmd - return : open -na /Applications/alacritty.app
cmd - return : open -a Kitty
cmd + shift - return : open -na '/Applications/kitty.app'
cmd - b : open -a '/Applications/Brave Browser.app'
cmd + shift -  b : open -na '/Applications/Brave Browser.app'
cmd + alt - b : open -n 'http://www.chatgpt.com'

